<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.chip.ChipGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="15dp"
        app:chipSpacingHorizontal="25dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tag筛选"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/tagEditText"
            android:layout_width="200dp"
            android:layout_height="45dp" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/ignoreCaseCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ignoreCase"
            tools:ignore="HardcodedText" />
    </com.google.android.material.chip.ChipGroup>

    <com.google.android.material.chip.ChipGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="15dp"
        app:chipSpacingHorizontal="25dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="时间筛选"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/dayEditText"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="bottom"
            android:text="天内"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

    </com.google.android.material.chip.ChipGroup>

    <com.google.android.material.chip.ChipGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="15dp"
        app:chipSpacingHorizontal="25dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="level筛选"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/vCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verbose"
            tools:ignore="HardcodedText" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/dCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Debug"
            tools:ignore="HardcodedText" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/iCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Info"
            tools:ignore="HardcodedText" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/wCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Warn"
            tools:ignore="HardcodedText" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/eCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Error"
            tools:ignore="HardcodedText" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/aCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assert"
            tools:ignore="HardcodedText" />
    </com.google.android.material.chip.ChipGroup>

    <com.google.android.material.chip.ChipGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="15dp"
        app:chipSpacingHorizontal="25dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="type筛选"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/jsonCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JSON"
            tools:ignore="HardcodedText" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/xmlCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XML"
            tools:ignore="HardcodedText" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/otherCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other"
            tools:ignore="HardcodedText" />
    </com.google.android.material.chip.ChipGroup>

</LinearLayout>